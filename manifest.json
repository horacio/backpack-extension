{
  "manifest_version": 2,

  "name": "Backpack",
  "description": "Keep your favorite highlights.",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
     "16": "icon-16.png",
     "64": "icon-64.png"
   },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_title": "Backpack",
    "default_icon": "icon-16.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications",
    "storage",
    "https://*.webtask.io/*"
  ]
}
